<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KidsLingo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryVariant">@color/app_green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.KidsLingo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KidsLingo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KidsLingo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
